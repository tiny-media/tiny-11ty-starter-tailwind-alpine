    <!-- Alpine.js Demo Section -->
    <section class="space-y-8 bg-white rounded-2xl shadow-sm p-6 sm:p-8 content-transition transition-slide-enter">
      <h2 class="text-2xl font-bold text-slate-800 border-b pb-4">Alpine.js Interactive Components</h2>

      <!-- Toggle Component -->
      <div class="grid" x-data="{ open: $persist(false) }" x-cloak>
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-slate-700">Collapsible Panel</h3>
          <button 
            @click="open = !open"
            class="w-full sm:w-auto px-6 py-2 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2">
            <span x-text="open ? 'Hide Content' : 'Show Content'"></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-200" :class="{'rotate-180': open}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Wrapper for height transition -->
          <div 
            class="transition-[grid-template-rows] duration-300" 
            :style="{ 
              display: 'grid', 
              gridTemplateRows: open ? '1fr' : '0fr' 
            }">
            <div class="overflow-hidden">
              <div 
                x-cloak
                x-show="open"
                x-transition:enter="transition-all duration-300 ease-out"
                x-transition:enter-start="opacity-0 transform -translate-y-4"
                x-transition:enter-end="opacity-100 transform translate-y-0"
                x-transition:leave="transition-all duration-200 ease-in"
                x-transition:leave-start="opacity-100 transform translate-y-0"
                x-transition:leave-end="opacity-0 transform -translate-y-4"
                class="p-4 bg-slate-50 rounded-lg">
                <p class="text-slate-600">This is a collapsible content panel that smoothly animates using Alpine.js transitions.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Counter Components -->
      <div class="grid sm:grid-cols-2 gap-6">
        <!-- Simple Counter -->
        <div class="p-6 bg-slate-50 rounded-xl" x-data="{ count: $persist(0) }" x-cloak>
          <h3 class="text-lg font-semibold text-slate-700 mb-4">Simple Counter</h3>
          <div class="flex items-center space-x-4">
            <button 
              x-on:click="count++"
              class="px-4 py-2 bg-purple-500 hover:bg-purple-600 text-white rounded-lg transition-colors duration-200">
              Increment
            </button>
            <span class="text-xl font-semibold" x-text="count"></span>
          </div>
        </div>

        <!-- Advanced Counter -->
        <div class="p-6 bg-slate-50 rounded-xl" x-data="{ count: $persist(0) }" x-cloak>
          <h3 class="text-lg font-semibold text-slate-700 mb-4">Advanced Counter</h3>
          <div class="flex flex-col items-center space-y-4">
            <p class="text-3xl font-bold text-slate-800" x-text="count"></p>
            <div class="flex space-x-3">
              <button 
                @click="count--"
                class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg transition-colors duration-200">
                Decrease
              </button>
              <button 
                @click="count++"
                class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg transition-colors duration-200">
                Increase
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Text Input Component -->
      <div class="p-6 bg-slate-50 rounded-xl" x-data="{ textInput: $persist('') }" x-cloak>
        <h3 class="text-lg font-semibold text-slate-700 mb-4">Interactive Text Input</h3>
        <div class="space-y-4">
          <input
            type="text"
            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all duration-200"
            x-model="textInput"
            placeholder="Type something...">
          <div class="bg-white p-4 rounded-lg border border-slate-200" :class="{ 'opacity-50': !textInput }">
            <p class="text-lg" x-text="textInput || 'Your text will appear here...'"></p>
          </div>
        </div>
      </div>

      
    </section>
  </main>
</body>
</html>
