<!-- Navigation -->
<nav class="mb-12 flex justify-center">
  <div class="bg-white rounded-full shadow-sm p-2 flex space-x-2">
    <a href="/" 
       class="px-4 py-2 rounded-full {% if page.url == '/' %}bg-indigo-500 text-white{% else %}text-slate-600 hover:text-slate-900 hover:bg-slate-100 transition-colors duration-200{% endif %}">Home</a>
    <a href="/about/" 
       class="px-4 py-2 rounded-full {% if page.url contains '/about/' %}bg-indigo-500 text-white{% else %}text-slate-600 hover:text-slate-900 hover:bg-slate-100 transition-colors duration-200{% endif %}">About</a>
  </div>
</nav>

<!-- Header Section -->
<header class="text-center mb-12 header-transition">
  <h1 class="text-4xl sm:text-5xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-indigo-600 to-purple-600">{{ title }}</h1>
  {% if description %}
  <p class="text-lg text-slate-600">{{ description }}</p>
  {% endif %}
</header>